{
  "buildCommand": "pnpm build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install -g pnpm@8.10.0 && cd ../.. && pnpm install --frozen-lockfile --prod=false && cd apps/frontend",
  "devCommand": "pnpm dev",
  "functions": {
    "app/**/*.{js,ts,jsx,tsx}": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
